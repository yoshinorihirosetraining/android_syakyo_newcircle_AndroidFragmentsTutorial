<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/state_saving_fragment_root">

    <TextView
        android:id="@+id/text_state_saving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_first_fragment_title"
        android:gravity="center_horizontal" />
    <EditText
        android:id="@+id/edit_state_saving_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/button_state_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_first_text" />
    <ListView
        android:id="@+id/listview_state_saving"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>